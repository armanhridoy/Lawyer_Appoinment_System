@model IEnumerable<LawyerAppointmentSystem.Models.Review>

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between">
            <h5 class="mb-0">⭐ Lawyer Reviews</h5>
            <a asp-action="CreateOrEdit" class="btn btn-sm btn-light">
                ➕ Add Review
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Rating</th>
                        <th>FullName</th>
                        <th>Comment</th>
                        <th>Date</th>
                        <th class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= item.Rating)
                                    {
                                        <span class="text-warning">★</span>
                                    }
                                    else
                                    {
                                        <span class="text-secondary">☆</span>
                                    }
                                }
                            </td>
                            <td>@item.Lawyer.FullName</td>
                            <td>@item.Comment</td>
                            <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-info">View</a>

                                <a asp-action="CreateOrEdit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-warning">Edit</a>

                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   onclick="return confirm('Delete this review?')"
                                   class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center text-muted py-3">
                    No reviews found.
                </div>
            }
        </div>
    </div>
</div>
