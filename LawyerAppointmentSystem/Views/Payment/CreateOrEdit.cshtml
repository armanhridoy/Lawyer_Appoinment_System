@model LawyerAppointmentSystem.Models.Payment

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        @(Model.Id == 0 ? "➕ Add Payment" : "✏️ Edit Payment")
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="CreateOrEdit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label"></label>
                            <input asp-for="Amount" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentMethod" class="form-label"></label>
                            <select asp-for="PaymentMethod" class="form-select">
                                <option value="">-- Select Method --</option>
                                <option>Cash</option>
                                <option>Card</option>
                                <option>Bkash</option>
                                <option>Nagad</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AppointmentId" class="form-label fw-semibold">Select Appointment</label>
                            <select asp-for="AppointmentId"
                                    class="form-select"
                                    asp-items="@(ViewBag.AppointmentId)">
                                <option value="">-- Select Appointment --</option>
                            </select>
                            <span asp-validation-for="AppointmentId" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="PaymentDate" class="form-label"></label>
                            <input asp-for="PaymentDate"
                                   type="datetime-local"
                                   class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
