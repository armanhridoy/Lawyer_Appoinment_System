@model IEnumerable<LawyerAppointmentSystem.Models.Payment>

<style>
    body {
        background: linear-gradient(rgba(0,0,0,.6), rgba(0,0,0,.6)), url('/images/payment-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        color: #fff;
    }

    .table thead {
        background: rgba(255,255,255,0.2);
    }

    .table tbody tr:hover {
        background: rgba(255,255,255,0.1);
        transition: .3s;
    }

    .btn-glass {
        background: rgba(255,255,255,0.2);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.3);
    }

        .btn-glass:hover {
            background: rgba(255,255,255,0.35);
            color: #000;
        }
</style>

<div class="container py-5">
    <div class="glass-card p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0">💳 Payment Management</h3>
            <a asp-action="CreateOrEdit" class="btn btn-glass">
                ➕ New Payment
            </a>
        </div>

        <table class="table table-borderless align-middle text-white">
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Method</th>
                    <th>Date</th>
                    <th>AppointmentDate</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">৳ @item.Amount</td>
                        <td>@item.PaymentMethod</td>
                        <td>@item.Appointment.AppointmentDate</td>
                        <td>
                            @item.PaymentDate.ToString("dd MMM yyyy, hh:mm tt")
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-glass me-1">
                                View
                            </a>
                            <a asp-action="CreateOrEdit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-glass me-1">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               onclick="return confirm('Delete this payment?')"
                               class="btn btn-sm btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center py-4 text-white-50">
                No payments found.
            </div>
        }
    </div>
</div>
