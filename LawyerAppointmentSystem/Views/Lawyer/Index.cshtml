@model IEnumerable<LawyerAppointmentSystem.Models.Lawyer>

@{
    ViewData["Title"] = "Lawyer List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>⚖️ Lawyer List</h3>
    <a asp-action="CreateOrEdit" class="btn btn-primary">
        ➕ Add Lawyer
    </a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Specialization</th>
            <th>Experience (Years)</th>
            <th>Fee</th>
            <th>Status</th>
            <th width="180">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int sl = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@sl</td>
                <td>@item.FullName</td>
                <td>@item.Specialization</td>
                <td class="text-center">@item.ExperienceYear</td>
                <td class="text-end">@item.ConsultationFee.ToString("0.00")</td>
                <td class="text-center">
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-sm btn-info">Details</a>

                    <a asp-action="CreateOrEdit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-warning">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.Id"
                       onclick="return confirm('Are you sure you want to delete this branch?')"
                       class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
            sl++;
        }
    </tbody>
</table>
